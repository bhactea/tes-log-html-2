<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    >

    <!-- Sesuaikan SDK level dengan build.gradle -->
    <uses-sdk
        android:minSdkVersion="21"
        android:targetSdkVersion="34"/>

    <application>
        <!-- Tandai modul Xposed -->
        <meta-data
            android:name="xposedmodule"
            android:value="true"/>
        <!-- Min API Xposed sesuai api-82.jar -->
        <meta-data
            android:name="xposedminversion"
            android:value="82"/>
        <meta-data
            android:name="xposeddescription"
            android:value="tes-log-html-2 untuk HarpaMobileHR:
             • bypass splash
             • bypass PIN
             • redirect kamera depan ke Open Camera"/>
    </application>
</manifest>
